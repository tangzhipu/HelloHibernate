<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ouc.jeep.domain">
    <class name="Person" table="person">
		 <id name="pid" column="pid" type="java.lang.Long" length="5">
            <generator class="native"/>
        </id>
        <property name="pname" type="java.lang.String" length="20">
        	<column name="pname"></column>
        </property>
        <property name="psex" type="java.lang.String" length="2">
        	<column name="psex"></column>
        </property> 
    </class>
</hibernate-mapping>